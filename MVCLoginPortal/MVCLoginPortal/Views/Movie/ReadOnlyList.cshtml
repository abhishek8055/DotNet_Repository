@model IEnumerable<MVCLoginPortal.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Store</h2>

<div>
    <table class="table table-bordered table-hover" id="movies">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
@section scripts{
    <script>
            $(document).ready(function () {
                var table = $("#movies").DataTable({
                    ajax: {
                        url: "/api/movies",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name",
                        },
                        {
                            data: "genre.name"
                        }                      
                    ]
                });
            });
    </script>
}

